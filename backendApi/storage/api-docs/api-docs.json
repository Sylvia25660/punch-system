{
    "openapi": "3.0.0",
    "info": {
        "title": "Punch System API",
        "description": "打卡系統 API 文件",
        "contact": {
            "email": "admin@example.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者註冊",
                "description": "用戶註冊新帳號",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "使用者註冊資訊",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "gender"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "使用者名稱",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "description": "電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "password_confirmation": {
                                        "description": "確認密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "gender": {
                                        "description": "性別",
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "註冊成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User successfully registered. Please log in."
                                        },
                                        "user": {
                                            "description": "使用者資訊",
                                            "type": "object"
                                        },
                                        "employee": {
                                            "description": "員工資訊",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        }
    ]
}