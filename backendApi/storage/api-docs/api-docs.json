{
    "openapi": "3.0.0",
    "info": {
        "title": "Punch System API",
        "description": "打卡系統 API 文件",
        "contact": {
            "email": "admin@example.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者登入",
                "description": "用戶使用電子郵件和密碼登入系統，成功後返回 JWT token",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "登入憑證",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "使用者電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "使用者密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "登入成功，返回 JWT token和使用者資訊",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "description": "JWT 存取token",
                                            "type": "string",
                                            "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                        },
                                        "token_type": {
                                            "description": "token類型",
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "description": "token過期時間（秒）",
                                            "type": "integer",
                                            "example": 3600
                                        },
                                        "user": {
                                            "description": "登入的使用者資訊",
                                            "properties": {
                                                "id": {
                                                    "description": "使用者 ID",
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "description": "使用者名稱",
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "email": {
                                                    "description": "電子郵件",
                                                    "type": "string",
                                                    "example": "john.doe@example.com"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "認證失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Unauthorized"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "伺服器錯誤，無法生成token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Could not create token"
                                        },
                                        "message": {
                                            "description": "異常詳細信息",
                                            "type": "string",
                                            "example": "詳細錯誤訊息"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者登出",
                "description": "用戶登出系統，使當前 JWT token失效",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "成功登出",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "登出成功訊息",
                                            "type": "string",
                                            "example": "Successfully logged out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "未提供token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Token not provided"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "201": {
                        "description": "token已過期，但登出成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "description": "登出成功訊息",
                                            "type": "string",
                                            "example": "Token has expired, but logout success"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "登出失敗",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "example": "Failed to log out"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "使用者註冊",
                "description": "用戶註冊新帳號",
                "operationId": "registerUser",
                "requestBody": {
                    "description": "使用者註冊資訊",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "gender"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "使用者名稱",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "description": "電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "password_confirmation": {
                                        "description": "確認密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "gender": {
                                        "description": "性別",
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "註冊成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User successfully registered. Please log in."
                                        },
                                        "user": {
                                            "description": "使用者資訊",
                                            "type": "object"
                                        },
                                        "employee": {
                                            "description": "員工資訊",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    }
                }
            }
        },
        "/api/employees": {
            "post": {
                "tags": [
                    "Employees"
                ],
                "summary": "HR 註冊新員工",
                "description": "HR 註冊新員工，會建立 `User` 帳號並在 `Employee` 記錄中標記 `pending` 狀態。",
                "operationId": "registerEmployeeByHR",
                "requestBody": {
                    "description": "HR 註冊新員工資訊",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation",
                                    "gender"
                                ],
                                "properties": {
                                    "name": {
                                        "description": "員工姓名",
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "description": "員工電子郵件",
                                        "type": "string",
                                        "format": "email",
                                        "example": "john.doe@example.com"
                                    },
                                    "password": {
                                        "description": "密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "password_confirmation": {
                                        "description": "確認密碼",
                                        "type": "string",
                                        "example": "Password123!"
                                    },
                                    "gender": {
                                        "description": "性別",
                                        "type": "string",
                                        "enum": [
                                            "male",
                                            "female"
                                        ],
                                        "example": "male"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "員工註冊成功，等待 HR 審核",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "員工已註冊，等待審核"
                                        },
                                        "user": {
                                            "description": "使用者資訊",
                                            "type": "object"
                                        },
                                        "employee": {
                                            "description": "員工資訊",
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    },
                    "403": {
                        "description": "權限不足"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/employees/{id}/review": {
            "patch": {
                "tags": [
                    "Employees"
                ],
                "summary": "HR 批准 / 拒絕 員工註冊",
                "description": "HR 可以批准或拒絕員工註冊申請。",
                "operationId": "reviewEmployee",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "員工的 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    }
                ],
                "requestBody": {
                    "description": "選擇批准或拒絕員工註冊",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status"
                                ],
                                "properties": {
                                    "status": {
                                        "description": "批准或拒絕",
                                        "type": "string",
                                        "enum": [
                                            "approved",
                                            "rejected"
                                        ],
                                        "example": "approved"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "操作成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "員工已批准"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "找不到員工",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "找不到員工"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    },
                    "403": {
                        "description": "權限不足"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/employees/{id}/assign": {
            "patch": {
                "tags": [
                    "Employees"
                ],
                "summary": "HR 分配部門、職位、主管、角色",
                "description": "HR 指派員工的部門、職位、主管和角色。員工必須已通過審核 (approved) 才能指派。",
                "operationId": "assignEmployeeDetails",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "員工的 ID",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 3
                        }
                    }
                ],
                "requestBody": {
                    "description": "需要指派的部門、職位、主管、角色 ID",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "department_id",
                                    "position_id",
                                    "manager_id",
                                    "role_id"
                                ],
                                "properties": {
                                    "department_id": {
                                        "description": "部門 ID",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "position_id": {
                                        "description": "職位 ID",
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "manager_id": {
                                        "description": "主管的使用者 ID",
                                        "type": "integer",
                                        "example": 5
                                    },
                                    "role_id": {
                                        "description": "角色 ID",
                                        "type": "integer",
                                        "example": 3
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "員工部門、職位、主管、角色已更新",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "員工部門、職位、主管、角色已更新"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "員工未通過審核，無法指派",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "無法指派，員工尚未通過審核"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "找不到員工",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "找不到員工"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "驗證失敗"
                    },
                    "403": {
                        "description": "權限不足"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "id": {
                        "description": "使用者 ID",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "使用者名稱",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "電子郵件",
                        "type": "string",
                        "format": "email",
                        "example": "john.doe@example.com"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "使用 JWT token進行認證，格式為 'Bearer {token}'",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Employees",
            "description": "Employees"
        }
    ]
}